{
  "name": "mealpoints-be-serverless",
  "version": "1.0.0",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.592.0",
    "@aws-sdk/client-sqs": "^3.613.0",
    "@aws-sdk/lib-storage": "^3.592.0",
    "@imagemagick/magick-wasm": "^0.0.29",
    "axios": "^1.7.2",
    "express": "^4.18.2",
    "libphonenumber-geo-carrier": "^1.2.8",
    "libphonenumber-js": "^1.11.14",
    "lodash": "^4.17.21",
    "mongoose": "^8.4.0",
    "morgan": "^1.10.0",
    "openai": "^4.51.0",
    "serverless-http": "^3.2.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "scripts": {
    "deploy:dev": " npm run deploy:pre-deply && sls deploy",
    "deploy:prod": "npm run deploy:pre-deply && sls deploy --stage production",
    "deploy:pre-deply": "npm run lint && npm run typecheck",
    "dev": "nodemon",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\" -c .eslintrc.js",
    "lint:fix": "npx eslint \"{src,apps,libs,test}/**/*.ts\" -c .eslintrc.js --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globalSetup": "<rootDir>/test/globalSetup.test.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupJest.ts"
    ],
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "resetModules": false
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.138",
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^53.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.6.0",
    "serverless-plugin-common-excludes": "^4.0.0",
    "serverless-plugin-include-dependencies": "^6.1.0",
    "serverless-plugin-typescript": "^2.1.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5"
  }
}
